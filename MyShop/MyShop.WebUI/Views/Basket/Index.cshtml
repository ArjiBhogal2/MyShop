@model IEnumerable<MyShop.Core.ViewModel.BasketItemViewModel>

@{
    ViewBag.Title = "Basket";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            Image
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            Line Total 
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        <img style="height@50px" src="~/Content/ProductImage/@item.image" />
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quantity)
    </td>
    <td>
        @String.Format("{0:c}", item.Price)
    </td>
    <td>
        @String.Format("{0:c}", item.Price * item.Quantity)
        </td>
    <td>
        <a href="@Url.Action("RemoveFromBasket", "Basket" , new {ProductID= item.ID })" class="btn btn-danger">Delete</a>
    </td>
</tr>
}

    <tr>
        <td colspan="4" style="text-align:right"><strong>TOTAL PRICE</strong></td>
        <td>@String.Format("{0:c}", (from p in Model select p.Price * p.Quantity).Sum()) </td>
    </tr>

    <tr><td><a href="@Url.Action("index", "Home")">Go to List</a></td></tr>
</table>
